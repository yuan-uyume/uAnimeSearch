{
  "manifest_version": 2,
  "name": "uAnimesearch",
  "version": "0.1.0",
  "description": "A Chrome Extension to search anime; 搜索动漫的插件;",
  "icons": {
    "16": "icons/128.png",
    "32": "icons/128.png",
    "48": "icons/128.png",
    "128": "icons/128.png"
  },
  "options_ui": {
    "page": "pages/search.html"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_title": "uAnimesearch",
    "default_popup": "popup.html"
  },
  "permissions": [
    "storage"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "run_at": "document_idle",
      "js": [
        "contentScript.js"
      ]
    }
  ]
}